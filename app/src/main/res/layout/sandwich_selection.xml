<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/sandwichTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sandwich_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="12dp"
        />

        <!-- Protein Selection -->
        <TextView
            android:text="@string/protein_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/proteinSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Bread Selection -->
        <TextView
            android:text="@string/bread_text"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/breadSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Toppings -->
        <TextView
            android:text="@string/toppings_text"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addOnsLayout" />

        <!-- Quantity -->
        <TextView
            android:text="@string/quantity_text"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/quantitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Price Display -->
        <TextView
            android:id="@+id/priceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price_placeholder"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/addToOrderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_to_order" />

        <Button
            android:id="@+id/addComboButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_combo"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>