<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="start">

    <!-- Horizontal row: image + name -->
    <LinearLayout
        android:id="@+id/clickableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/beverageImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/beverage_image_text" />

        <TextView
            android:id="@+id/beverageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flavor_name_placeholder"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- hidden menu -->
    <include layout="@layout/hidden_menu" />
</LinearLayout>